{
	"compilerOptions": {
		"target": "esnext",
		
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"rootDir": "./src",
		"baseUrl": "./",
		"outDir": "./dist",
		"removeComments": true,
		"esModuleInterop": true,
		
		"forceConsistentCasingInFileNames": true,
		
		"strict": true,
		"skipLibCheck": true
	}
}
